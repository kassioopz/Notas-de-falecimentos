rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth.uid == resource.data.email;
    }

    match /posts/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /posts/{parent}/comments/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/comments/{document} {
      allow read: if true;
    }


    match /users/{parent}/bookmarks/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth.uid == parent;
      allow delete: if request.auth.uid == parent;
    }

    match /{path=**}/bookmarks/{document} {
      allow read: if true;
    }


    match /chats/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if false;
      allow delete: if false;
    }

    match /users/{parent}/followers/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth.uid == parent;
      allow delete: if request.auth.uid == parent;
    }

    match /{path=**}/followers/{document} {
      allow read: if true;
    }


    match /administrative/{document} {
      allow create: if request.auth.uid in request.resource.data.usernames;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /users/{parent}/recent_searches/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth.uid == parent;
      allow delete: if request.auth.uid == parent;
    }

    match /{path=**}/recent_searches/{document} {
      allow read: if true;
    }


    match /users/{parent}/notifications/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if true;
    }

    match /{path=**}/notifications/{document} {
      allow read: if true;
    }


    match /users/{parent}/chatRefs/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth.uid == parent;
      allow delete: if true;
    }

    match /{path=**}/chatRefs/{document} {
      allow read: if true;
    }


    match /videos/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /ff_user_push_notifications/{id} {
      allow read, update, delete: if false;
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) == request.resource.data.sender;
    }
  }
}
